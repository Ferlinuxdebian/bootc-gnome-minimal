# /etc/systemd/system/post-install.service
# Instala v√°rios apps flatpaks
[Unit]
Description=Bootstrap de Flatpaks iniciais
ConditionPathExists=!/var/lib/flatpak/app
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/bin/post-install.sh

[Install]
WantedBy=multi-user.target
